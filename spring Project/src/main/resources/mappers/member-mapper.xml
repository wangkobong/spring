<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="memberMapper">
	<!-- namespace : 해당 mapper파일의 별칭을 지정 -->

  	<!-- mapper.xml : SQL을 작성해두고 외부 요청  SQL문을 매핑해주는 문서 -->
  	
  	<!-- ResultMap 작성 
  	
  		<resultMap> 태그는 마이바티스에서 가장 중요하고 강력한 기능을 가진 태그
  		
  		Select 진행 시 조회되는 결과 집합(ResultSet)을
  		원하는 VO(또는 DTO)에 매핑 시켜줄 떄 필드명과 컬럼명이 다를 경우
  		이를 지정해서 매핑 시킬 수 있게 하는 태그다.
  	-->
  	<resultMap  id="memberResultSet" type="Member">
  		
  		<!-- DB 기본키에 해당하는 필드와 컬럼을 작성  -->
  		<id property="memberNo" column="MEMBER_NO"/>
  		
  		<!-- DB 일반 컬럼에 해당하는 필드와 컬럼을 작성 -->
  		<result property="memberId" column="MEMBER_ID"/>
  		<result property="memberPwd" column="MEMBER_PWD"/>
  		<result property="memberName" column="MEMBER_NM"/>
  		<result property="memberPhone" column="MEMBER_PHONE"/>
  		<result property="memberEmail" column="MEMBER_EMAIL"/>
  		<result property="memberAddress" column="MEMBER_ADDR"/>
  		<result property="memberInterest" column="MEMBER_INTEREST"/>
  		<result property="memberEnrollDate" column="MEMBER_ENROLL_DT"/>
  		<result property="memberStatus" column="MEMBER_STATUS"/>
  		<result property="memberGrade" column="MEMBER_GRADE"/>
  		
  	</resultMap>

  	<!--  parameterType="Member" 에서 "Member"는
  		com.kh.spring.member.model.vo.Member 의 별칭이다(mybatis-config.xml에서 지정)
  	-->
  	<select id="loginMember" parameterType="Member" resultMap="memberResultSet">
  		SELECT * FROM MEMBER 
		WHERE MEMBER_ID = #{memberId} 
		<!-- AND MEMBER_PWD = #{memberPwd} -->
		
		AND MEMBER_STATUS = 'Y' 
  	</select>
  	
  	<!-- 회원가입 -->
  	<!-- insert, update, delete는 
  		반환형(resultType)이 모두 int형으로 고정이기 때문에
  		별도의 resultType 속성을 작성할 필요가 없음.
  	 -->
  	<insert id="signUp" parameterType="Member">
  		INSERT INTO MEMBER
  		VALUES(SEQ_MNO.NEXTVAL, #{memberId}, #{memberPwd}, #{memberName},
  		#{memberPhone}, #{memberEmail}, #{memberAddress}, #{memberInterest},
  		DEFAULT, DEFAULT, DEFAULT)
  	</insert> 
  	
  	<!-- ID 중복 검사  -->
  	<!-- parameter/resultType 작성 시  마이바티스 내장 별칭을 잘 확인할 것
  		String -> string
  		int -> _int
  		List -> list , Map -> map
  	 -->
  	<select id="idDupCheck" parameterType="string" resultType="_int">
  		SELECT COUNT(*) FROM MEMBER
  		WHERE MEMBER_ID = #{memberId}
  		AND MEMBER_STATUS = 'Y'
  	
  	</select>

  	<update id="updateMember" parameterType="Member">
	  	UPDATE MEMBER SET 
	  	MEMBER_PHONE = #{memberPhone} , MEMBER_EMAIL = #{memberEmail}, 
	  	MEMBER_ADDR = #{memberAddress} , MEMBER_INTEREST = #{memberInterest}
	  	WHERE MEMBER_NO = #{memberNo}
	  <!-- 	(SELECT MEMBER_NO FROM MEMBER WHERE MEMBER_ID = #{memberID) AND MEMBER_STATUS = 'Y' -->
  	</update>
  	
  	<!-- 비밀번호 조회  -->
  	<select id="selectPwd" parameterType="_int" resultType="string">
  		SELECT MEMBER_PWD
  		FROM MEMBER
  		WHERE MEMBER_NO = #{memberNo}
  	</select>
  	
  	<!-- 비밀번호 수정 -->
  	<update id="updatePwd" parameterType="Member">
  		UPDATE MEMBER SET
  		MEMBER_PWD = #{memberPwd}
  		WHERE MEMBER_NO = #{memberNo}	
  	</update>
  	
</mapper>



